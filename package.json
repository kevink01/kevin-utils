{
	"name": "@kevink01/kevin-utils",
	"version": "0.1.0",
	"description": "A utility library for configurations and helper methods",
	"publishConfig": {
		"access": "public"
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts --minify",
		"changeset": "changeset",
		"lint": "eslint . --max-warnings 0",
		"lint:fix": "eslint . --fix",
		"prepare": "husky",
		"release": "changeset publish",
		"test": "vitest run --reporter=verbose",
		"test:coverage": "vitest --coverage",
		"test:ui": "vitest --ui",
		"test:watch": "vitest --reporter=verbose"
	},
	"author": "Kevin Kulich",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kevink01/kevin-utils/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/kevink01/kevin-utils.git"
	},
	"engines": {
		"node": ">=20"
	},
	"homepage": "https://github.com/kevink01/kevin-utilst#readme",
	"devDependencies": {
		"@changesets/cli": "^2.27.9",
		"@types/node": "^22.7.8",
		"@typescript-eslint/eslint-plugin": "^8.11.0",
		"@typescript-eslint/parser": "^8.11.0",
		"@vitest/coverage-v8": "^2.1.3",
		"@vitest/ui": "^2.1.3",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-import": "^2.31.0",
		"husky": "^9.1.6",
		"lint-staged": "^15.2.10",
		"prettier": "^3.3.3",
		"tsup": "^8.3.0",
		"typescript": "^5.6.3",
		"vitest": "^2.1.3"
	}
}
